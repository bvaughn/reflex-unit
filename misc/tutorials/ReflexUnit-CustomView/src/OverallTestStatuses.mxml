<?xml version="1.0" encoding="utf-8"?>
<mx:Grid width="100%" height="100%"
         xmlns:mx="http://www.adobe.com/2006/mxml">
	
	<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.graphics.SolidColor;
			import mx.graphics.Stroke;
			
			[Bindable]	// Contains: OverallTestStatusesData
			public var dataProvider:ArrayCollection = new ArrayCollection();
			
			private var solidColorError:SolidColor = new SolidColor( 0x990000 );
			private var solidColorFailure:SolidColor = new SolidColor( 0xAAAA00 );
			private var solidColorSuccess:SolidColor = new SolidColor( 0x009900 );
			
		]]>
	</mx:Script>
	
	<mx:GridRow width="100%">
		<mx:GridItem width="50%" height="100%" horizontalAlign="center" verticalAlign="middle">
			<mx:Label text="Overall Test Statuses" />
		</mx:GridItem>
		<mx:GridItem width="50%" height="100%" horizontalAlign="center" verticalAlign="middle">
			<mx:Legend dataProvider="{ pieChart }"/>
		</mx:GridItem>
	</mx:GridRow>
	
	<mx:GridRow width="100%">
		<mx:GridItem width="100%" height="100%" colSpan="2">
			<mx:PieChart id="pieChart" width="100%" height="100%"
			             showAllDataTips="true"
			             dataProvider="{ dataProvider }">
				
				<mx:series>
					<mx:PieSeries nameField="statusName" field="count"
					              fills="{ [ solidColorError, solidColorFailure, solidColorSuccess ] }">
						
						<!-- Clear the ugly drop-shadow and bevel effects. -->
						<mx:filters>
							<mx:Array />
						</mx:filters>
						
					</mx:PieSeries>
				</mx:series>
				
			</mx:PieChart>
		</mx:GridItem>
	</mx:GridRow>
	
</mx:Grid>